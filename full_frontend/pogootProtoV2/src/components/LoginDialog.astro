<dialog id="login_popup">
  <div class="modal">
    <h1>Sweep.rs</h1>
    <mdui-tabs value="Login" id="loginTabs" full-width variant="secondary">
      <mdui-tab value="Login">Login</mdui-tab>
      <mdui-tab value="Register">Register</mdui-tab>
    </mdui-tabs>
    <div id="form_container">
      <div id="register_form">
        <h2>Sign Up</h2>
        <form>
        <mdui-text-field
          variant="outlined"
          label="Username"
          id="emailRegister"
            name="email"
            autocomplete="email"
          class="textField"></mdui-text-field>
        <mdui-text-field
          variant="outlined"
          label="Confirm Username"
          id="emailRegisterConfirm"
            name="email"
            autocomplete="email"
          class="textField"></mdui-text-field>
        <mdui-text-field
          variant="outlined"
          label="Password"
          id="passwordRegister"
          class="textField"
          type="password"
          toggle-password></mdui-text-field>
        <mdui-text-field
          variant="outlined"
          label="Confirm Password"
          id="passwordRegisterConfirm"
          class="textField"
          type="password"
          toggle-password></mdui-text-field>
</form>
