---
export const prerender = true;
import Layout from "../layouts/Layout.astro";
---

<Layout title="Account | Pogoot">
  <canvas id="canvas" width="1000px" height="500px" role="presentation"
  ></canvas>
</Layout>

<style>
  #register {
    display: none;
  }
  .formHeader {
    justify-self: center;
  }
  body {
    display: grid;
    width: 100%;
    height: 100%;
    /* background-color: rgb(37, 37, 37); */
    margin: 0;
    background-color: var(--blue);
    color: white;
    font-family: LeagueSpartan;
    font-size: 20px;
    /* ba */
    /* outline: 2px solid red; */
    /* margin:-8px; */
  }
  #login {
    grid-row: 20;
  }
  #register {
    grid-row: 20;
  }

  main {
    display: grid;
    position: absolute;
    max-width: 50%;
    width: 500px;
    /* outline: 2px solid red; */
    top: 100px;
    height: 400px;
    background-image: linear-gradient(180deg, rgb(37, 37, 37), black);
    background-color: white;
    justify-self: center;
    padding: 80px;
    border-radius: 20px 20px 20px 20px;
    box-shadow: 5px 5px 5px 5px black;
    /* grid-template-columns: 50% 50%; */
    /* grid-template-rows: repeat(20, 5px); */
  }
  #registerForm {
    width: 100%;
    display: grid;
    row-gap: 2px;
    /* height:1 */
  }
  #loginForm {
    width: 100%;
    display: grid;
    row-gap: 2px;
    /* height:1 */
  }

  input {
    max-width: 80%;
    width: 60%;
    justify-self: center;
    height: 25px;
    background-color: transparent;
    border-color: transparent;
    color: white;
    border-bottom: 2px solid white;
    margin-bottom: 2px;
  }

  #top {
    justify-self: center;
    text-align: center;
    grid-column: 1/3;
    /* width: 200%; */
    margin: 0;
    /* position: absolute; */
  }
  #top > h1 {
    margin: 0;
  }
  .submit {
    background-color: white;
    box-flex: 1px 1px 1px 1px white;
    color: black;
    /* background-image: linear-gradient(to bottom right, gray, navy); */
    border-bottom: transparent;
    margin-top: 10px;
    /* padding: 10px; */
    border-radius: 3px 3px 3px 3px;
  }
  input:invalid {
    border-bottom: red solid 2px;
  }
</style>
