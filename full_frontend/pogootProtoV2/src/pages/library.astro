---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import NavBar from '../components/NavBar.astro';
import SearchBar from '../components/SearchBar.astro'
---

<Layout title="Home | Pogoot">
  <NavBar />
      <div class="accountSection">
        <div class="profilePicture">I</div>
        <div> <h2>Name</h2> <p>username</p></div>
    <SearchBar id="accountSearchBar" />
    </div>
  <main class="LibraryMain">
      <!-- placeholder things -->

      {[""].map((_) => <div class="placeholderLibraryEntry"><div class="header"><p class="titlePlaceholder"><strong>Title</strong></p><p class="authorPlaceholder"><strong>Author: </strong></p><p class="datePlaceholder">Created: </p></div></div>)}

  </main>
</Layout>

