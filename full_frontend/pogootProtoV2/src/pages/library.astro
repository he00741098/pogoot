  }
  @media (width<1190px) {
    .notecardTermCountHolder {
      grid-column: 7/9;
      padding-left: 2px;
      /* grid-row: 1; */
      /* top: 0px; */
      /* width: 500%; */
      /* position: relative; */
      /* text-align: center; */
      /* display: grid; */
