---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import NavBar from '../components/NavBar.astro';

---

<Layout title="Home | Pogoot">
  <NavBar />
  <main class="LibraryMain">
      <!-- placeholder things -->

      {["","",""].map((_) => <div class="placeholderLibraryEntry"><h1 class="titlePlaceholder">Title</h1><div class="bodyPlaceholder"><h3>Author: </h3><p>Created: <p></div></div>)}

  </main>
</Layout>

<style>
  body{
    display:grid;
    width:100%;
    height:100%;
    /* background-color: rgb(253, 249, 241); */
    margin: 0;
    background-color:var(--blue);
    color:white;
    font-family: LeagueSpartan;
    font-size:20px;
    /* outline: 2px solid red; */
    /* margin:-8px; */
  }

  .placeholderLibraryEntry{
    width:50%;
    /* height:25%; */
    background-color:white;
    color:black;
    width:100%;
    /* padding-top:10px; */
    margin:5px;
    border-radius: 5px 5px 5px 5px;
    display:grid;
    grid-template-columns: 100%;
    text-align:center;
    justify-content:center;
  }

  main{
    display:grid;
    grid-template-rows: 25%;
    position:absolute;
    width:50%;
    height:100%;
    /* outline: 2px solid red; */
    top:50px;
    left:25%;
    /* padding-left:50px; */
    /* background-image: linear-gradient(to bottom right, #F5E3B8, #F5DD67); */
    /* outline: 2px solid red; */
  }
  
</style>
