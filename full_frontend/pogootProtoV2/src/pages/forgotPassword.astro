---
export const prerender = true;
import Layout from "../layouts/Layout.astro";
---

<Layout title="Forgot Password | Pogoot">
  <main class="forgotMain">
    <h1>Page Under Construction...</h1>
  </main>
</Layout>

<style>
  body {
    display: grid;
    width: 100%;
    height: 100%;
    margin: 0;
    background-color: var(--blue);
    color: white;
    font-family: LeagueSpartan;
    font-size: 20px;
  }

  main {
    display: grid;
    position: absolute;
    width: 50%;
    top: 50px;
    left: 25%;
  }
  .notecardplaceholder {
    width: 500px;
    height: 300px;
    border-radius: 10px 10px 10px 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }
  #notecard1 {
    background-color: var(--green);
  }
  #notecard2 {
    margin-top: 10px;
    background-color: var(--pink);
    float: right;
  }
</style>
