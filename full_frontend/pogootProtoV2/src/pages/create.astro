---
export const prerender = true;
import Layout from "../layouts/Layout.astro";
---

<Layout title="Create | Pogoot">
  <main class="LibraryMain">
    <div class="createTitle">
      <h1>Create A New Note Set</h1>
      <!-- <div>Save</div> -->
      <mdui-button class="SaveButton" id="save">
        <mdui-icon slot="icon" name="save"></mdui-icon>
        <div id="saveText">Save</div>
      </mdui-button>
    </div>
    <div id="top">
      <input class="notecardInput" id="titleInput" placeholder="Title" />
      <div id="grid2">
        <textarea
          class="notecardInput"
          id="description"
          placeholder="Description"></textarea>
        <input class="notecardInput" placeholder="Tags" id="tags" />
        <input class="notecardInput" placeholder="School" id="school" />
        <div class="editing">
          <div class="button">Swap Terms</div>
          <div class="button">Import</div>
          <div class="button">Share</div>
        </div>
      </div>
    </div>
    <div id="cards">
      <div id="create" class="notecardContainer">
        <textarea
          autocomplete="on"
          autofocus="on"
          id="createFrontInput"
          class="notecardInput frontNotecardInput"
          value=""
          placeholder="Add new card"
          rows="1"></textarea><textarea
          rows="1"
          id="createBackInput"
          class="notecardInput backNotecardInput"
          value=""></textarea>
      </div>

      <div id="created" class="notecardContainer" style="display:none"></div>
      <div id="notecardHeaderLeft" class="notecardHeaderLeft">
        <input class="orderNumber" value="1" disabled />
        <div class="move_up_button_container">
          <mdui-button-icon icon="arrow_drop_up" class="move_up_button"
          ></mdui-button-icon>
        </div>
        <div class="move_down_button_container">
          <mdui-button-icon icon="arrow_drop_down" class="move_down_button"
          ></mdui-button-icon>
        </div>
      </div>
      <div
        id="notecardHeaderRight"
        class="notecardHeaderRight"
        style="display:none"
      >
        <strong><mdui-icon name="delete_outline"></mdui-icon></strong>
      </div>

      <div id="end_cap">
        <mdui-button variant="filled" id="add_button">Add Card</mdui-button>
      </div>
    </div>
  </main>
</Layout>

<style>
  #created,
  #notecardHeaderLeft,
  #notecardHeaderRight {
    display: none;
  }
  .move_up_button,
  .move_down_button {
    color: var(--blue);
  }
  /* #move_up_button[disabled], */
  /* #move_down_button[disabled] { */
  /*   color: gray; */
  /* } */

  .createTitle {
    display: grid;
    grid-template-columns: 50% 50%;
    justify-content: center;
    align-content: center;
  }
  .SaveButton {
    /* background-color: white; */
    /* color: var(--blue); */
    /* margin-bottom: 5px; */
    width: 100px;
    /* height: 37px; */
    font-size: 20px;
    padding-top: 6px;
    padding-bottom: 6px;
    padding-left: 4px;
    padding-right: 4px;
    text-align: center;
    border-radius: 2px;
    cursor: pointer;
    justify-self: end;
    align-self: center;
    /* vertical-align: center; */
    /* float: right; */
  }
  .button {
    background-color: white;
    border-radius: 10px 10px 10px 10px;
    color: var(--blue);
    padding-top: 7px;
    padding-bottom: 7px;
    padding-left: 2px;
    /* width: 50%; */
    text-align: center;
    vertical-align: center;
    justify-content: center;
  }
  .button:hover {
    /* background-color: var(--green); */
  }
  .editing {
    display: grid;
    width: 100%;
    column-gap: 1.25%;
    grid-template-columns: repeat(10, calc(8.75%));
    grid-column: 1/3;
    margin-top: 20px;
  }
  #description {
    grid-row: 1/3;
    grid-column: 1;
    font-size: 15px;
    padding: 3px;
  }
  #school {
    grid-column: 2;
    padding-left: 10px;
    width: calc(100% - 10px);
  }
  #tags {
    padding-left: 10px;
    width: calc(100% - 10px);
  }
  #grid2 {
    display: grid;
    column-gap: 15px;
    row-gap: 2px;
    grid-template-columns: calc(50% - 7.5px) calc(50% - 7.5px);
  }
  #top {
    margin-bottom: 20px;
    display: grid;
    text-align: center;
    /* grid-template-columns: ; */
  }
  #end_cap {
    margin-top: 10px;
    padding-top: 2px;
    font-size: 25px;
    text-align: center;
    /* width: 100%; */
    /* text-decoration: underline; */
    /* cursor: pointer; */
  }
  #end_cap:hover {
    /* color: var(--blue); */
    /* background-color: white; */
    font-size: 27px;
  }
  .notecardHeaderRight:hover {
    cursor: pointer;
    color: black;
  }
  .orderNumber {
    width: 60px;
    height: 30px;
    font-size: 25px;
    text-align: center;
    border: none;
    background-color: transparent;
    border-bottom: 2px solid grey;
  }
  .notecardHeaderLeft {
    background-color: white;
    width: 100%;
    /* border-bottom: 1px solid grey; */
    margin-bottom: 10px;
  }
  .notecardHeaderRight {
    background-color: white;
    color: red;
    text-align: end;
    justify-self: end;
    /* width: 100%; */
    font-size: 25px;
  }

  #titleInput {
    width: 100%;
    margin-bottom: 15px;
    font-size: 28px;
    text-align: center;
    color: black;
    background-color: white;
    /* margin: 50px; */
    /* position: relative; */

    /* padding-left: 10px; */
    /* margin-left: 10px; */
  }
  #cards {
    width: 100%;
    height: fit-content;
    display: flex;
    flex-direction: column;
    /* grid-template-columns: 100%; */
    /* row-gap: 10px; */
    margin-bottom: 20px;
  }
  :global(#footer) {
    position: relative;
  }
  :global(#slot-container) {
    display: flex;
    flex-direction: column;
  }
  .notecardInput {
    width: 100%;
    min-height: 30px;
    font-size: 25px;
    border-color: black;
    border-width: 0px;
    border-bottom: 1px solid grey;
    padding: 0px;
    margin: 0px;
    resize: none;
    /* text-indent: 15px; */
    background-color: white;
    color: black;
    /* color: white; */
    /* border-radius: 4px; */
  }

  .backNotecardInput {
    /* float: right; */
  }
  .notecardContainer {
    display: grid;
    grid-template-columns: 45% 45%;
    width: 100%;
    column-gap: 2%;
    /* padding: 10px; */
    padding-top: 10px;
    padding-bottom: 10px;
    /* border-radius: 10px; */
    background-color: white;
    justify-items: center;
    align-items: center;
    justify-content: center;
    margin-bottom: 5px;
    /* box-shadow: 2px 2px 1px black; */
    /* margin:5px; */
  }

  body {
    display: grid;
    width: 100%;
    height: 100%;
    /* background-color: rgb(253, 249, 241); */
    margin: 0;
    background-color: var(--blue);
    color: white;
    font-family: LeagueSpartan;
    font-size: 20px;
    /* outline: 2px solid red; */
    /* margin:-8px; */
  }

  main {
    display: flex;
    flex-direction: column;
    position: relative;
    width: 50%;
    top: 100px;
    left: 25%;
    margin-bottom: 90px;
  }
  #sidebar {
    /* outline: 2px solid red; */
  }
  .notecardplaceholder {
    width: 500px;
    height: 300px;
    border-radius: 10px 10px 10px 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }
  #notecard1 {
    background-color: var(--green);
  }
  #notecard2 {
    margin-top: 10px;
    background-color: var(--pink);
    /* position:absolute; */
    /* left:100px; */
    float: right;
  }
  #saveText {
    /* height: 100%; */
    /* font-size: 25px; */
    display: grid;
    /* align-content: center; */
    position: relative;
    top: 1.3px;
    /* vertical-align: baseline; */
  }
</style>
